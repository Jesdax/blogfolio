{% extends 'base.html.twig' %}
{% form_theme form 'materialize_layout.html.twig' %}

{% block body %}

    {% if error %}
        <div>
            {{ error.messageKey }}
        </div>
    {% endif %}
    <div class="center">
        <h1>Connexion</h1>
    </div>
    <div class="container">
        <br/>
        <div class="card">
            <div class="row">
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                {{ form_start(form, {'action': path('security_login'), 'method': 'POST'}) }}
                <div class="form-group row">
                    <div class="col m12 s12">
                        {{ form_row(form._username) }}
                    </div>
                    <div class="col m12 s12">
                        {{ form_row(form._password) }}
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                    <div class="center">
                        <button class="btn btn-round btn-brown" type="submit">Valider</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-countdown/2.0.2/jquery.plugin.min.js" type="text/javascript"></script>
    <script src="{{ asset('js/main.js') }}" type="text/javascript"></script>
{% endblock %}