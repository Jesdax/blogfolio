{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Articles {% endblock %}

{% block body %}
    <div>
        <div class="row">
            <div class="col s12">
                <div class="center">
                    <img src="
                        {% if article.image is null %}
                            {{ asset('img/default.jpg') }}
                        {% else %}
                            {{ image_article_directory }}/{{ article.image }}
                        {% endif %}
                    " alt="article_" class="article-img">
                    <h1 class="padding-bottom">{{ article.title }}</h1>
                </div>
                <div class="container">
                    {{ article.content|raw }}
                </div>
                <p class="center margin-b margin-t">{{ article.user.lastname }} {{ article.user.firstname }} - {{ article.publishingDate|date("d/m/Y") }}</p>
            </div>
        </div>
    </div>

{% endblock %}