{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Blog {% endblock %}

{% block body %}

    <div class="row container">
        {% for article in articles%}
            <div class="col s12 m6 l3">
                <div class="card">
                    <div class="card-image">
                        <div class="center">
                            <img src="
                        {% if article.image is null %}
                            {{ asset('img/default.jpg') }}
                        {% else %}
                            {{ image_article_directory }}/{{ article.image }}
                        {% endif %}" alt="article_">

                        </div>
                    </div>
                    <div class="card-bottom">
                        <div class="card-content">
                            <p class="center card-title">{{ article.title }}</p>
                            <p class="center card-author">{{ article.user.lastname }} {{ article.user.firstname }} - {{ article.publishingDate|date("d/m/Y") }}</p>
                            <p class="card-excerpt">
                                {{ article.content|slice(0,250)|striptags|raw }}...
                            </p>
                        </div>
                    </div>
                    <div class="center card-action">
                        <a href="{{ path('article-blog', {'id': article.id}) }}" class="btn">Lire l'article</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}