<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <link rel="icon" href="{{ asset('icon/favicon.ico') }}" />
        <title>{% block title %}Augustin KAVERA{% endblock %}</title>
        {% block stylesheets %}
        <!--Import Google Icon Font-->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/materialize.css') }}">
        <link rel="stylesheet" href="{{ asset('css/main.css') }}">
            <!-- Xmas theme -->
        <link rel="stylesheet" href="{{ asset('css/xmas.css') }}">
        {% endblock %}
    </head>
    <body>
        {% block navigation %}
        <div class="navbar-fixed">
            <nav>
                <div class="nav-wrapper">
                    <a href="{{ path('homepage') }}" class="brand-logo"><img src="{{ asset('img/ak01.png') }}" alt="Logo du site" id="logo-ak"></a>
                    <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                    <ul class="right hide-on-med-and-down">
                        <li><a href="{{ path('homepage') }}">Accueil</a></li>
                        <li><a href="/#a-propos">À propos</a></li>
                        <li><a href="/#competences">Compétences</a></li>
                        <li><a href="/#cursus">Parcours</a></li>
                        <li><a href="/#project">Projets</a></li>
                        <li><a href="{{ path('blog') }}">Blog</a></li>
                        <li><a href="#">Contact</a></li>
                        {% if is_granted(['ROLE_USER', 'ROLE_ADMIN']) %}
                            <li><a href="{{ path('security_logout') }}"><i class="material-icons">power_settings_new</i></a></li>
                        {% else %}
                            <li><a href="{{ path('security_login') }}"><i class="material-icons">person</i></a></li>
                        {% endif %}
                    </ul>
                </div>
            </nav>
        </div>


        <ul class="sidenav" id="mobile-demo">
            <li><a href="{{ path('homepage') }}">Accueil</a></li>
            <li><a href="/#a-propos">À propos</a></li>
            <li><a href="/#competences">Compétences</a></li>
            <li><a href="/#cursus">Parcours</a></li>
            <li><a href="/#project">Projets</a></li>
            <li><a href="{{ path('blog') }}">Blog</a></li>
            <li><a href="#">Contact</a></li>
            {% if is_granted(['ROLE_USER', 'ROLE_ADMIN']) %}
            <li><a href="{{ path('security_logout') }}"><i class="material-icons">power_settings_new</i></a></li>
            {% else %}
            <li><a href="{{ path('security_login') }}"><i class="material-icons">person</i></a></li>
            {% endif %}
        </ul>

        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="{{ asset('js/materialize_effect.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/materialize.js') }}" type="text/javascript"></script>

        {% endblock %}
    </body>
</html>
